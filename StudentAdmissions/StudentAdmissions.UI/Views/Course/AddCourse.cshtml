@model StudentAdmissions.UI.Models.CourseModels.AddCourseViewModel
@{
    ViewData["Title"] = "Add Course";
}

<h1>Add New Course</h1>
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4 form-horizontial">
        <form asp-controller="Course" asp-action="AddCourse" method="post">
            <div class="mb-3">
                <label asp-for="CourseName" class="form-label">Course Name</label>
                <input type="text" class="form-control" id="CourseName" asp-for="CourseName">
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CourseDescription" class="form-label">Course Description</label>
                <input type="text" class="form-control" id="CourseDescription" asp-for="CourseDescription">
                <span asp-validation-for="CourseDescription" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Credits" class="form-label">Credits</label>
                <input type="number" class="form-control" id="Credits" asp-for="Credits">
                <span asp-validation-for="Credits" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SubjectID" class="form-label">Subject</label>
                <select class="form-select" id="SubjectID" asp-for="SubjectID">
                    <option selected>Choose Subject</option>
                    @foreach (var subject in Model.Subjects)
                    {
                        <option value="@subject.SubjectID">@subject.SubjectName</option>
                    }
                </select>
            </div>

            <div mt-5>
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary" asp-controller="Course" asp-action="GetCourses">Cancel</a>
            </div>
        </form>
    </div>
</div>
