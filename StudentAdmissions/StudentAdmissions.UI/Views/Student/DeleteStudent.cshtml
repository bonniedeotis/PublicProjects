@model StudentAdmissions.Application.Entities.Student

@{
    ViewData["Title"] = "Delete - " + @Model.FirstName + " " + @Model.LastName;
}

<h1>Remove Student</h1>
<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-6">
        <form asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@Model.StudentID" method="post">
            <h4>Are you sure you want to delete @Model.FirstName @Model.LastName?</h4>
            <div class="alert alert-danger" role="alert">This action cannot be undone!</div>
            <input type="hidden" asp-for="StudentID" />
            <button class="btn btn-danger">Delete</button>
            <a asp-action="ListStudents" asp-controller="Student" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>