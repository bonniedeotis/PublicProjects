        if(Model.EnrollmentStatus.ToString() == "Open")
        {
            <a class="btn btn-primary" asp-controller="StudentSection" asp-action="AddStudentToSection" asp-route-courseId="@Model.Section.CourseID" asp-route-sectionId="@Model.Section.SectionID">Enroll Student</a>
        }
    } *@
</div>
